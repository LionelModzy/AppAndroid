<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".TH2_Bai9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/tvThongTinCaNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/blue"
            android:layout_marginBottom="12dp"/>
<TableRow android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tvHoTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên:"
        android:background="@color/blue"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập họ tên"
        android:layout_marginStart="8dp"
        android:padding="10dp" />
</TableRow>


<TableRow
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
        >
    <TextView
        android:id="@+id/tvCMND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CMND:"
        android:background="@color/blue"
        android:textSize="16sp"
         />

    <EditText
        android:id="@+id/etCMND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số CMND"
        android:inputType="number"
        android:layout_marginStart="30dp"
        android:padding="10dp" />

</TableRow>

        <!-- Bằng cấp -->
        <TextView
            android:id="@+id/tvBangCap"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Bằng cấp:"
            android:textSize="20dp"
            android:background="@color/blue"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/rgBangCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbTrungCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung cấp" />

            <RadioButton
                android:id="@+id/rbCaoDang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cao đẳng" />

            <RadioButton
                android:id="@+id/rbDaiHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đại học" />
        </RadioGroup>

        <!-- Sở thích -->
        <TextView
            android:id="@+id/tvSoThich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở thích:"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/blue"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9">

            <CheckBox
                android:id="@+id/cbDocSach"
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Đọc sách" />

            <CheckBox
                android:id="@+id/cbDocBao"
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Đọc báo" />

            <CheckBox
                android:id="@+id/cbDocCoding"
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Đọc coding" />
        </LinearLayout>

        <!-- Thông tin bổ sung -->
        <TextView
            android:id="@+id/tvThongTinBoSung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/blue"
            android:text="Thông tin bổ sung:"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etThongTinBoSung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập thông tin bổ sung"
            android:padding="10dp" />

        <!-- Button Gửi thông tin -->
        <Button
            android:id="@+id/btnGuiThongTin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi thông tin"
            android:layout_marginTop="16dp"
            android:padding="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
